#!/bin/bash

set -euo pipefail
IFS=$'\n\t'

export LAUNCHPAD_API="https://api.staging.launchpad.net/"

mir-bug update --yes --skip --tz=UTC 1897551

mir-bug check --tz=UTC 1897551

mir-bug update --yes --skip --ready 1897551

mir-bug check --ready 1897551

mir-bug collect "$AUTOPKGTEST_ARTIFACTS"/oem-meta-mir-bugs.json
